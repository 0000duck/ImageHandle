@model Models.User
@{
    ViewBag.Title = "修改用户信息";
}

<div class="page-header">
    <h1>修改用户信息</h1>
</div>
<form method="POST" action="" class="form-horizontal" role="form">
    @Html.ValidationSummary(true)
    <input id="Id" name="Id" type="hidden" value="@Model.Id" /> 
    <div class="form-group">
        <label for="Name" class="control-label col-sm-1">姓名</label>
        <input id="Name" name="Name" type="text" value="@Model.Name" class="form-control col-sm-1" placeholder="请输入姓名">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        <label for="LoginName" class="control-label col-sm-1">登录名</label>
        <input id="LoginName" name="LoginName" type="text" value="@Model.LoginName" class="form-control col-sm-1" readonly="readonly">
    </div>
    <div class="form-group">
        <label for="Role" class="control-label col-sm-1">角色</label>
        <input id="Role" name="Role" type="text" value="@Model.Role" class="form-control col-sm-1" readonly="readonly">
    </div>
    <div class="form-group">
        <label for="Password" class="control-label col-sm-1">密码</label>
        <input id="Password" name="Password" type="password" class="form-control col-sm-1" />
    </div>
    <div class="form-group">
        <label for="ConfirmPassword" class="control-label col-sm-1">确认密码</label>
        <input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control col-sm-1" />
    </div>
    <div class="form-group">
            <span class="col-sm-1"></span>
            <button type="submit" class="btn col-sm-1">保存</button>
            <a href="@Url.Action("Index","User")" class="btn-link col-sm-1">取消</a>

        </div>
</form>