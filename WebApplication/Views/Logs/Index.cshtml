
@model  IEnumerable<Models.Logs>
@{
    ViewBag.Title = "系统日志";
}

<div class="page-header">
    <h1>系统日志</h1>
</div>
<form class="form-horizontal" role="form" action="index" method="get">
    <div class="form-group">
        <label for="begindate" class="col-sm-1 control-label">开始时间</label>
        <input type="date" id="begindate" name="begindate" class="form-control col-sm-1" />
        <label for="enddate" class="col-sm-1 control-label">结束时间</label>
        <input type="date" id="enddate" name="enddate" class="form-control col-sm-1" /> 
        <label for="logAction" class="col-sm-1 control-label">类型</label>
        <div class="col-sm-2">
            <select id="logAction" name="logAction" class="dropdown form-control">
                <option value="0" selected="selected">全部</option>
                <option value="1">新建订单</option>
                <option value="2">创建订单图片</option>
                <option value="11">新建预设样式</option>
                <option value="21">新建字体</option>
                <option value="31">创建用户</option>
                <option value="41">登录</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="query" class="col-sm-1 control-label"></label>
        <div class="col-sm-2">
            <input type="submit" name="query" class="btn col-sm-10" value="查询" />
        </div>
        <label for="count" class="control-label" style="color:grey">数量: @ViewBag.count 个</label>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>编号</th>
                                <th>用户</th>
                                <th>操作</th>
                                <th>详情</th>
                                <th>时间</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Action</td>
                                    <td>@item.Detail</td>
                                    <td>@item.Time</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    function Query() {
        alert("dd");
    }
</script>
