        "<input id='PositionX" + index + "' type='text' name='PositionX" + index + "' class='col-sm-1 form-control' value='60' style='width:100px;'/>"+
        "<label for='PositionY" + index + "' class='col-sm-1 control-label'>Y位置</label>"+
        "<input id='PositionY" + index + "' type='text' name='PositionY" + index + "' class='col-sm-1 form-control' value='50' style='width:100px;'/>" +
        "<input id='del_mainText" + index + "' type='button' value='删除' class='btn' onclick='DeleteText(" + index + ");'/>" +
        "<a id='addmainbtn" + index + "' onclick='AddMainText(" + index + "); return false;' class='btn btn-link'>添加主文字</a>" +
        "</div>");  
    }
    function DeleteText(index) {
        var preindex = index - 1;
        var aa = "addmainbtn" + preindex;
        var bb = "del_mainText" + preindex;
        $("#" + aa).show();
        $("#" + bb).show();
        var cc = "mainText" + index;
        $("#" + cc).remove();
    }
    function AddSmallText() {
        $("#smalltext").toggle();
    }
    function CreateImage() {
        var name = $("#Name").val();
        var text1 = $("#Text1").val(); 
        if (name == "" || name == null) {
            alert("请先输入样式名称！");
            return;
        } 

        var formData = new FormData($("#itemForm")[0]);
        $.ajax({
            dataType: "json",
            type: "post",
            url: '/sample/Create?type=CreateImage',
            data: formData,
            processData: false,
            contentType: false,
            success: function (data) {
                if (data.status == "Fail") {
                    alert(data.message);
                }
                else {
                    $("#ImageUrl").val(data);
                    $("#sampleimage").attr('src', "\\UploadFiles\\SampleImgs\\" + data + "?t=" + Math.random());
                    $("#sampleimage").show();
                } 
            },
            error: function (response, ajaxOptions, thrownError) {
                alert("生成图片发生错误");
            }
        });
    }
    function UploadFile() {
        var file = $("#file").val();
        if (file == "") {
            alert("请先选择文件！");
            return;
        }
        var formData = new FormData($("#itemForm")[0]);
        $.ajax({
            dataType: "json",
            type: "post",
            url: '/sample/Create?type=UploadFile',
            data: formData,
            processData: false,
            contentType: false,
            success: function (data) {
                if (data.status == "Fail") {
                    alert(data.message);
                } else {
                    $("#BgImage").val(data);
                    alert("背景图片上传成功");
                }
            },
            error: function (response, ajaxOptions, thrownError) {
                alert("上传失败：" + response.message);
            }
        });
    }
