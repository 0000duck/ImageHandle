@model Models.Order
@{
    ViewBag.Title = "提交印章文字";
}

<div class="page-header">
    <h1>提交印章文字</h1>
</div>

<form method="POST" action="StepTwo" class="form-horizontal" role="form"> 
    <fieldset>
        <div class="form-group">
            <label for="ImageType" class="control-label">印章类型</label>
            <select id="ImageType" name="ImageType" class="form-control">
                @foreach (var item in @ViewBag.imageTypes)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="Style" class="control-label">样式</label>
            <select id="Style" name="Style" class="form-control">
                <option value="0" selected="selected">阴文</option>
                <option value="1">阳文</option>
            </select>
        </div>
        <div class="form-group">
            <label for="IfHasBgImage" class="control-label">是否有背景图案</label>
            <select id="IfHasBgImage" name="IfHasBgImage" class="form-control">
                <option value="0" selected="selected">全部</option>
                <option value="1">有背景图</option>
                <option value="2">无背景图</option>
            </select>
        </div>
        <div class="form-group">
            <a onclick="selectSample()" class="btn btn-link">点击选择预设方案>></a>
        </div>
    </fieldset>
</form>
<script type="text/javascript">
    function selectSample() {
        var type = $("#ImageType").val();
        var style = $("#Style").val();
        var ifhasBgImage = $("#IfHasBgImage").val();
        //alert("selectSample, type:" + type + ", style:" + style + ", ifhasimag:" + ifhasBgImage);
        location.href = "/Front/Samples?type=" + type + "&style=" + style + "&ifHasBgImage=" + ifhasBgImage + "&retURL=" + window.location.href; 
    }

</script>
