                <input type="text" name="Text5" class="col-sm-1 form-control" style="width:100px;" />
                <label for="FontSize5" class="col-sm-1 control-label">文字大小</label>
                <input id="FontSize5" type="text" name="FontSize5" class="col-sm-1 form-control" value="40" style="width:100px;" />
                <label for="PositionX5" class="col-sm-1 control-label">X位置</label>
                <input id="PositionX5" type="text" name="PositionX5" class="col-sm-1 form-control" value="140" style="width:100px;" />
                <label for="PositionY5" class="col-sm-1 control-label">Y位置</label>
                <input id="PositionY5" type="text" name="PositionY5" class="col-sm-1 form-control" value="250" style="width:100px;" />
                <label for="FontOrder" class="col-sm-1 control-label">文字顺序: </label>
                <select id="FontOrder" name="FontOrder" class="col-sm-1 form-control" style="width:120px;" >
                    <option value="1" selected="selected">从左往右</option>
                    <option value="0">从右往左</option>
                </select>
            </div>
            <div class="form-group">
                <a onclick="AddSmallText(); return false;" class="btn btn-link">添加副文字</a>
            </div>
            <div class="form-group">
                <input type="button" value="生产预览图" onclick="CreateImage(); return false;" class="btn" />
            </div>
            <div class="form-group">
                <div style="width:198px;">
                    <input id="ImageUrl" name="ImageUrl" value="" type="text" hidden="hidden" />
                    <img id="sampleimage" src="" style="width:198px; border: 1px solid #dddddd;" hidden="hidden" />
                </div>
            </div>
        </div>

        <label style="color:red">@ViewBag.Message</label>
        <div class="form-group">
            <input type="submit" name="type" value="保存" class="btn btn-block" />
        </div>
    </fieldset>
</form>

<script src="~/Scripts/jquery.form.min.js"></script>
