@model WebApplication.Models.User
@{
    ViewBag.Title = "登录";
}
 

<div class="jumbotron">
    <h1>用户登录</h1>
    <form method="POST" action="">
        <fieldset>
            <label for="Name">登录名：</label>
            <input id="LoginName" name="LoginName" type="text" value="@Model.LoginName" placeholder="登录名" required="required" />
            <br />
            <label for="Password">&nbsp;&nbsp;&nbsp;&nbsp;密码：</label>
            <input id="Password" name="Password" type="password" required="required" />
            <br />
            <label style="color:red">@ViewBag.Message</label>
            <p>
                <button type="submit">登录</button>
            </p>
            </fieldset>
    </form>
</div>
