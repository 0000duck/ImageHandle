    function AddMainText(preindex) {
        //if ($('#mainText2').is(':hidden')) { $("#mainText2").show() }
        //else if ($('#mainText3').is(':hidden')) { $("#mainText3").show() }
        //else if ($('#mainText4').is(':hidden')) { $("#mainText4").show() }
        //else { alert("最多支持4个字"); }
      
