                    <label for="Text4" class="col-sm-1 control-label">主文字4</label>
                    <input type="text" name="Text4" class="col-sm-1 form-control" style="width:100px;" />
                    <label for="FontSize4" class="col-sm-1 control-label">文字大小</label>
                    <input id="FontSize4" type="text" name="FontSize4" class="col-sm-1 form-control" value="160" style="width:100px;" />
                    <label for="PositionX4" class="col-sm-1 control-label">X位置</label>
                    <input id="PositionX4" type="text" name="PositionX4" class="col-sm-1 form-control" value="60" style="width:100px;" />
                    <label for="PositionY4" class="col-sm-1 control-label">Y位置</label>
                    <input id="PositionY4" type="text" name="PositionY4" class="col-sm-1 form-control" value="270" style="width:100px;" />
                </div>*@
            </div>
            @*<div class="form-group">
                <a onclick="AddMainText(1); return false;" class="btn btn-link">添加主文字</a>
