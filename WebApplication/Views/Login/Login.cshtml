@model Models.User
@{
    ViewBag.Title = "登录";
}

 
    <div class="page-header">
        <h2>用户登录</h2>
    </div>
    <form method="POST" action="" class="form-horizontal" role="form">
        <div class="form-group">
            <label for="LoginName" class="control-label">登录名：</label>
            <input id="LoginName" name="LoginName" type="text" value="@Model.LoginName" placeholder="登录名" required="required" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Password" class="control-label">密码：</label>
            <input id="Password" name="Password" type="password" required="required" class="form-control" />
        </div>
        <label style="color:red" class="control-label">@ViewBag.Message</label>
        <p>
            <button type="submit" class="btn">登录</button>
        </p>
    </form> 